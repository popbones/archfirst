        <StackPanel Style="{StaticResource FormRow}">
            <sdk:Label Content="Symbol" Target="{Binding ElementName=symbol}" Style="{StaticResource WideFormLabel}" />
            <TextBox x:Name="symbol" Style="{StaticResource WideFormTextBox}"
                Text="{Binding Path=OrderParams.Symbol, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}">
                <i:Interaction.Behaviors>
                    <helpers:TextChangedBahvior />
                </i:Interaction.Behaviors>
            </TextBox>
            <TextBlock Text="Last Trade" Style="{StaticResource WideFormInfoBlock}"
                Visibility="{Binding Path=LastTrade, Converter={StaticResource lastTradeToVisibilityConverter}}" />
            <TextBlock Text="{Binding Path=LastTrade}" Style="{StaticResource WideFormInfoBlock}"
                Visibility="{Binding Path=LastTrade, Converter={StaticResource lastTradeToVisibilityConverter}}" />
        </StackPanel>


<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    x:Class="Bullsfirst.Module.Orders.Views.OrdersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:helpers="clr-namespace:Archfirst.Framework.SilverlightHelpers;assembly=Archfirst.Framework"
    xmlns:infraControls="clr-namespace:Bullsfirst.Infrastructure.Controls;assembly=Bullsfirst.Infrastructure"
    xmlns:local="clr-namespace:Bullsfirst.Module.Orders.Views"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="950">

    <UserControl.Resources>
        <local:ExpandCollapseVisibilityConverter x:Key="ExpandCollapseVisibilityConverter" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White" Margin="20 10 20 10">

        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Filter -->
            <RowDefinition Height="Auto" />
            <!-- Filter Expander -->
            <RowDefinition Height="Auto" />
            <!-- Orders -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Orders" Style="{StaticResource Header1}" />

        <infraControls:AccountSelector Grid.Row="0"
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 10 10 0" />

        <!-- Filter -->
        <Grid Grid.Row="1">
            <TextBlock Text="Filter" />
        </Grid>

        <!-- Filter Expander -->
        <Grid Grid.Row="2">
            <TextBlock Text="Filter Expander" />
        </Grid>

        <!-- Orders -->
        <sdk:DataGrid
            Grid.Row="3"
            ItemsSource="{Binding UserContext.SelectedAccount.Position}"
            RowDetailsVisibilityMode="Collapsed"
            AutoGenerateColumns="False"
            HorizontalAlignment="Left"
            RowHeight="32"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            IsReadOnly="True"
            Style="{StaticResource DataGridStyle}"
            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
            RowStyle="{StaticResource DataGridRowStyle}">
            <sdk:DataGrid.Columns>
                <sdk:DataGridTemplateColumn
                    HeaderStyle="{StaticResource LeftAlignedColumnHeaderStyle}"
                    CellStyle="{StaticResource LeftAlignedCellStyle}"
                    Width="30">
                    <sdk:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ToggleButton Style="{StaticResource ExpandCollapseButtonStyle}"
                                          Visibility="{Binding Converter={StaticResource ExpandCollapseVisibilityConverter}}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <helpers:ExpandRowAction />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ToggleButton>
                        </DataTemplate>
                    </sdk:DataGridTemplateColumn.CellTemplate>
                </sdk:DataGridTemplateColumn>
                <sdk:DataGridTextColumn
                    Header="Creation Time"
                    Binding="{Binding CreationTime, Converter={StaticResource DateTimeToDateStringConverter}}"
                    HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                    CellStyle="{StaticResource LeftAlignedCellStyle}"
                    Width="160" />
                <sdk:DataGridTextColumn
                    Header="Order #"
                    Binding="{Binding Id}"
                    HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                    CellStyle="{StaticResource RightAlignedCellStyle}"
                    Width="130" />
                <sdk:DataGridTemplateColumn
                    Header="Actions"
                    HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                    CellStyle="{StaticResource CenterAlignedCellStyle}"
                    Width="60">
                    <sdk:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="Temp" />
                        </DataTemplate>
                    </sdk:DataGridTemplateColumn.CellTemplate>
                </sdk:DataGridTemplateColumn>
            </sdk:DataGrid.Columns>
            <sdk:DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <sdk:DataGrid
                        ItemsSource="{Binding Child}"
                        HeadersVisibility="None"
                        AutoGenerateColumns="False"
                        HorizontalAlignment="Left"
                        RowHeight="20"
                        IsReadOnly="True"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="False"
                        HorizontalScrollBarVisibility="Hidden"
                        BorderThickness="0"
                        RowStyle="{StaticResource DataGridRowStyle}"
                        RowBackground="White"
                        AlternatingRowBackground="White">
                        <sdk:DataGrid.Columns>
                            <sdk:DataGridTextColumn
                                Binding="{Binding LotCreationTime, Converter={StaticResource DateTimeToDateStringConverter}}"
                                CellStyle="{StaticResource IndentedCellStyle}"
                                Width="160" />
                            <sdk:DataGridTemplateColumn
                                CellStyle="{StaticResource LeftAlignedCellStyle}"
                                Width="60">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>
                        </sdk:DataGrid.Columns>
                    </sdk:DataGrid>
                </DataTemplate>
            </sdk:DataGrid.RowDetailsTemplate>
        </sdk:DataGrid>
    </Grid>
</UserControl>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.archfirst.bullsfirst.interfaceout.broker" />

    <!-- JMS Template -->
    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsConnectionFactory" />
    </bean>
    
    <!-- FixBrokerAdapter -->
    <bean id="brokerAdapter"
        class="org.archfirst.bullsfirst.interfaceout.broker.FixBrokerAdapter">
        <constructor-arg ref="jmsTemplate" />
        <constructor-arg>
            <map>
                <entry>
                    <key><value>SEAM</value></key>
                    <ref bean="exchangeToBfseamFixQueue" />
                </entry>
                <entry>
                    <key><value>SPNG</value></key>
                    <ref bean="exchangeToBfspringFixQueue" />
                </entry>
            </map>
        </constructor-arg>
    </bean>
    
    <!-- MarketPricePublisher -->
    <bean id="marketPricePublisher"
        class="org.archfirst.bullsfirst.interfaceout.broker.MarketPricePublisher">
        <constructor-arg ref="jmsTemplate" />
        <constructor-arg ref="exchangeMarketPriceTopic" />
    </bean>
</beans>